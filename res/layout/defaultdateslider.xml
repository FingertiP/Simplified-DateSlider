<?xml version="1.0" encoding="utf-8"?>
<th.in.fingertip.dateslider.SliderContainer
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dateSliderContainer"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <th.in.fingertip.dateslider.ScrollLayout
        style="@style/Scroller"
        app:labelerClass="th.in.fingertip.dateslider.MonthYearLabeler"
        app:labelerFormat="%tb %tY"
        app:childWidth="90dp"
        />
    <th.in.fingertip.dateslider.ScrollLayout
        style="@style/Scroller"
        app:labelerClass="th.in.fingertip.dateslider.DayDateLabeler"
        app:labelerFormat="%td %ta"
        app:childWidth="45dp"
        />
    <include layout="@layout/dialogbuttons"/>
</th.in.fingertip.dateslider.SliderContainer>